# Freedom Wallet Bot - Environment Variables

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321  # Comma-separated admin user IDs

# AI APIs (choose one or both)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-claude-api-key

# Database
DATABASE_URL=sqlite:///data/users.db
# DATABASE_URL=postgresql://user:password@localhost:5432/freedom_wallet_bot

# Google Sheets (for support tickets)
GOOGLE_SHEETS_CREDENTIALS=config/google-credentials.json
SUPPORT_SHEET_ID=your_google_sheet_id_here

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# App Settings
ENV=development  # development or production
DEBUG=true
LOG_LEVEL=INFO

# Rate Limiting
MAX_MESSAGES_PER_MINUTE=10
MAX_SUPPORT_TICKETS_PER_DAY=3

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn-here

# Freedom Wallet Integration (Phase 3)
FREEDOM_WALLET_API_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec
FREEDOM_WALLET_API_KEY=your_api_key_here
