# ============================================
# Freedom Wallet Bot - PRODUCTION ENVIRONMENT
# ============================================
# This file is for PRODUCTION VPS ONLY
# DO NOT COMMIT THIS FILE
# ON VPS: Copy this to .env and fill in real values
# ============================================

# Environment
ENV=production
DEBUG=False

# Telegram Bot (Production Bot)
TELEGRAM_BOT_TOKEN=your-production-bot-token-from-botfather
BOT_USERNAME=FreedomWalletBot
ADMIN_USER_ID=your-telegram-admin-id

# Database (PostgreSQL for production)
DATABASE_URL=postgresql://freedomwallet:your-strong-password@localhost:5432/freedomwalletdb

# Logging
LOG_LEVEL=INFO
LOG_FILE=D:/FreedomWalletBot/data/logs/bot.log

# Google Sheets (Production Sheet)
GOOGLE_SHEETS_CREDENTIALS=D:/FreedomWalletBot/google_service_account.json
TEMPLATE_SHEET_ID=your-production-template-sheet-id
ADMIN_SUPPORT_SHEET_ID=your-production-support-sheet-id

# OpenAI (Production API Key)
OPENAI_API_KEY=sk-your-production-openai-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Payment (Real Bank Account)
PAYMENT_BANK_NAME=OCB
PAYMENT_ACCOUNT_NAME=PHAM THANH TUAN
PAYMENT_ACCOUNT_NUMBER=0107103241416363
PREMIUM_PRICE_VND=999000
PAYMENT_QR_API=https://img.vietqr.io/image/{bank_code}-{account_number}-{template}.jpg

# Feature Flags (Production settings)
ENABLE_AI=True
ENABLE_VOICE=False
ENABLE_ADMIN=True

# Rate Limiting (Strict for production)
MAX_MESSAGES_PER_MINUTE=10
MAX_SUPPORT_TICKETS_PER_DAY=3

# Redis (Production Redis)
REDIS_URL=redis://localhost:6379

# Security
ALLOWED_UPDATES=message,callback_query,inline_query
WEBHOOK_SECRET=your-random-webhook-secret-here

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
